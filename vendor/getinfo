#!/bin/sh
# small helper to extract information form *.ent files

BASEDIR="$(readlink -f "$(dirname $0)")"

getcurrent() {
	# search for an exact match to use the correct sources.list example
	cd $BASEDIR
	DISTROS="$(find . -mindepth 1 -maxdepth 1 -type d | cut -d'/' -f 2 | LC_ALL=C sort)"
	for DISTRO in $DISTROS; do
		if dpkg-vendor --is $DISTRO; then
			echo $DISTRO
			return 0
		fi
	done

	# if we haven't found a specific, look for a deriving
	# we do ubuntu and debian last as those are the biggest families
	# and would therefore potentially 'shadow' smaller families
	# (especially debian as it sorts quiet early)
	for DISTRO in $DISTROS; do
		if [ "$DISTRO" = 'debian' -o "$DISTRO" = 'ubuntu' ]; then continue; fi
		if dpkg-vendor --derives-from $DISTRO; then
			echo $DISTRO
			return 0
		fi
	done

	# Do the ubuntu/debian dance we talked about
	if dpkg-vendor --derives-from ubuntu; then
		echo ubuntu
		return 0
	fi

	echo debian
	return 0
}

while [ -n "$1" ]; do
	if [ "$1" = "--vendor" ]; then
		CURRENT_VENDOR="$2"
		shift 2
	elif [ "$1" = "--build" ]; then
		CURRENT_BUILD="$2"
		shift 2
	else
		break
	fi
done
if [ -z "$CURRENT_VENDOR" ]; then
	CURRENT_VENDOR=$(getcurrent)
fi
aptvendorfilename() {
	echo "${1}/${CURRENT_VENDOR}/apt-vendor.ent"
}
if [ -r "$(aptvendorfilename "$BASEDIR")" ]; then
	INFO="$(readlink -f "$(aptvendorfilename "$BASEDIR")")"
elif [ -n "$CURRENT_BUILD" -a -r "$(aptvendorfilename "${CURRENT_BUILD}/vendor")" ]; then
	INFO="$(readlink -f "$(aptvendorfilename "${CURRENT_BUILD}/vendor")")"
elif [ -r "$(aptvendorfilename "$BASEDIR").sh" ]; then
	INFO="$(readlink -f "$(find "${BASEDIR}/.." -name 'apt-vendor.ent' | grep -m 1 "/${CURRENT_VENDOR}/apt-vendor.ent")")"
fi
VERBATIM="${BASEDIR}/../doc/apt-verbatim.ent"

if [ -z "$INFO" ] || [ ! -r "$INFO" ]; then
	if [ ! -r "$(aptvendorfilename "${BASEDIR}").sh" ]; then
		echo >&2 'The current vendor is not valid or not chosen by the buildsystem yet.'
		exit 1
	fi
fi

getrawfield() {
	awk "/<!ENTITY $1/ {f=NR} f && NR-1==f { print; exit 0 }" RS='"' "${2:-$INFO}"
}

getfield() {
	local FIELD="$(getrawfield "$@")"
	FIELD="${FIELD#*>}"
	echo "${FIELD%<*}"
}

case "$1" in
debian-stable-codename|debian-oldstable-codename|debian-testing-codename|ubuntu-codename)
	getrawfield "$1" "$VERBATIM"
	;;
sourceslist-list-format|keyring-package|keyring-filename|keyring-master-filename|keyring-removed-filename|keyring-uri|vendor-*)
	exec $0 --vendor $CURRENT_VENDOR 'vendor' "$@"
	;;
vendor)
	getfield "$2"
	;;
verbatim)
	getfield "$2" "$VERBATIM"
	;;
current)
	echo $CURRENT_VENDOR
	;;
vendorfields)
	sed -n -e 's#^\s*<!ENTITY\s\+\(vendor-[^ ]\+\)\s.*$#\1#p' "$INFO" | tac
	;;
*)
	echo >&2 "Unknown data field $1 requested"
	exit 2
	;;
esac
